# EduFlow AI - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com
ENVIRONMENT=production

# Database Configuration
# For SQLite (default):
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# For PostgreSQL (uncomment and update):
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=eduflow
# DB_USER=eduflow_user
# DB_PASSWORD=secure_password_here
# DB_HOST=localhost
# DB_PORT=5432

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# AI Configuration
AI_ENABLED=True
AI_PROVIDER=anthropic
AI_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxx
AI_MODEL=claude-3-5-sonnet-20241022

# AI Provider Options:
# - mock: Fake AI for testing (no API key needed)
# - openai: OpenAI GPT models
# - anthropic: Anthropic Claude models (RECOMMENDED)

# AI Model Options:
# For OpenAI:
#   - gpt-4 (best quality, higher cost)
#   - gpt-3.5-turbo (fast, lower cost)
#   - gpt-4-turbo-preview (balanced)
#
# For Anthropic:
#   - claude-3-5-sonnet-20241022 (recommended)
#   - claude-3-opus-20240229 (highest quality)
#   - claude-3-haiku-20240307 (fastest, cheapest)

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://127.0.0.1:6379/1

# Celery Configuration (optional)
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# CORS Settings
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Logging
DJANGO_LOG_LEVEL=INFO

# Sentry Error Tracking (optional)
SENTRY_DSN=

# AWS S3 Configuration (optional, for static/media files)
# USE_S3=True
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_REGION_NAME=us-east-1

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_NAME=Admin Name

# Language Settings
LANGUAGE_CODE=en-us
TIME_ZONE=UTC

# Application Specific Settings
DEFAULT_AUTO_FIELD=django.db.models.BigAutoField

# Claude Model Options:
# - claude-3-5-sonnet-20241022 (RECOMMENDED: Best balance, $3/1M tokens)
# - claude-3-opus-20240229 (Highest quality, $15/1M tokens)
# - claude-3-haiku-20240307 (Fastest/cheapest, $0.25/1M tokens)
# - claude-3-5-sonnet-20241022 (Latest Sonnet, intelligent & fast)

# Database (optional, defaults to SQLite)
# DATABASE_URL=sqlite:///db.sqlite3

# Additional Settings (optional)
# LANGUAGE_CODE=en
# TIME_ZONE=Asia/Ho_Chi_Minh
